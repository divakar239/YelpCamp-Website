<% include ../partials/header %>

    <div class="row">
        <h1 style="text-align: center"> Create a New Camping Ground</h1>
        
            <form action="/campinggrounds" method="POST">
                   <p><input class="form-control" type="text" placeholder="name" name="name"></p>
                   <p><input class="form-control" type="number" placeholder="price" name="price" min="1" step="1"></p>
                   <p><input class="form-control" type="text" placeholder="image url" name="image"></p>
                   <p><input class="form-control" type="text" placeholder="description" name="description"></p>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
             <div class="form-group">
                <p><a href="/campinggrounds"> Go Back </p>
            </div>
       
       
    </div>

<% include ../partials/footer %>