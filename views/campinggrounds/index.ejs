<% include ../partials/header %>


<header class="jumbotron">
    <div class="container">
        <h1>Welcome to YelpCamp!</h1>
        <p>View our hand-picked grounds for camping</p>
        <p><a href="/campinggrounds/new" class="btn btn-primary btn-large"> Add Camp-Ground </a></p>
    </div>
</header>


    <div class="row text-center">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    
                    <img src="<%=campground.image%>">
                </div>
                <div class="caption">
                    <h4><%= campground.name %></h4>
                </div>
                <p>
                    <a href="/campinggrounds/<%=campground._id%>" class="btn btn-priamry btn-large">More Info</a>
                </p>
            </div>
        <% }); %>
    </div>


<% include ../partials/footer %>