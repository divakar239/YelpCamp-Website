<% include ../partials/header %>

    <div class="row">
        <h1 style="text-align: center"> Edit <%= campground.name %></h1>
        
            <form action="/campinggrounds/<%=campground._id %>?_method=PUT" method="POST">
                  <div class="form-group"><label for="location">Name</label><input class="form-control" type="text" value="<%= campground.name %>" name="campground[name]"></div>
                  <div class="form-group"><label for="location">Price</label><input class="form-control" type="number" value="<%= campground.price %>" name="campground[price]" min="1" step="1"></div>
                  <div class="form-group"><label for="location">Image</label><input class="form-control" type="text" value="<%= campground.image %>" name="campground[image]"></div>
                  <div class="form-group"><label for="location">Description</label><input class="form-control" type="text" value="<%= campground.description %>" name="campground[description]"></div>
                  <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="campgorund[location]" id="location" value="<%= campground.location %>">
                 </div>
                 <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                 </div>
            </form>
             <div class="form-group">
                <p><a href="/campinggrounds"> Go Back </p>
            </div>
       
       
    </div>

<% include ../partials/footer %>